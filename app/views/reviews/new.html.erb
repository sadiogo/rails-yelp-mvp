<div class="container">
  <%= simple_form_for [ @restaurant, @review ] do |f| %>
    <%= f.input :rating %>
    <%= f.input :content %>
    <%= f.input :restaurant_id, as: :hidden, input_html: { value: "#{@restaurant.id}" } %>
    <%= f.submit class: "btn btn-primary" %>
    <%= link_to "Back", restaurant_path(@restaurant.id) %>
  <% end %>
</div>